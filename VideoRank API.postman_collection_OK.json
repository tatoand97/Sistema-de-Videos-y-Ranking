      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const data = pm.response.json();",
              "  const token = data.access_token || data.token || data.jwt;",
              "  if (token) { pm.collectionVariables.set('jwt', token); }",
              "} catch(e) {",
              "  console.log('Sin JSON o sin token');",
              "}"
            ],
            "type": "text/javascript",
            "packages": {}
          }
        }
